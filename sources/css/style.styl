rupture.scale = 0 400px 650px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'


body
    background: #FDE9E9


.box
    min-height: 150px;
    background: #fff
    width: 100%
    margin-bottom: 20px
    padding-top: 30px




input[type="radio"] + label span 
    transition: background .2s,
    transform .2s !important;
    border: 2px #d2d2d2 solid


input[type="radio"] + label span:hover,input[type="radio"] + label:hover span
  transform: scale(1.2) !important;
 

input[type="radio"]:checked + label span 
  background-color: rgb(220, 52, 52)!important; //bg-blue
  box-shadow: 0px 0px 0px 2px white inset !important;


input[type="radio"]:checked + label
   color: #000 !important; //text-blue

